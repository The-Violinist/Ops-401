import logging
import os


logging.basicConfig(filename='challenge06.txt',level=logging.INFO)
###Variables###
#Take user input to be used in the function
#inp = input("Please enter a console command:\n>")
inp = "asdf"
###Functions###
#Run a system command based on the input
def sys(var1):
    print(f"Here is the result of the following command: {var1}\n\n")
    os.system(var1)
    print("\n\n")


###Main###
#Call the function
'''
try:
    sys(inp)
    logging.info(f"{inp} worked")
except Exception as err:
    logging.warning(f"{inp} did not work")
'''
